{
  "name": "sarya-connective-client",
  "version": "1.0.0",
  "description": "Sarya Connective Client - HR & Payroll Management System Frontend",
  "author": "Sarya Connective Team",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-to-print": "^2.14.15",
    "socket.io-client": "^4.7.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "optionalDependencies": {
    "electron-auto-launch": "npm:null@^10.0.3",
    "electron-store": "^8.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "node build-script.js web",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');const src=path.join('public','_redirects');const dest=path.join('build','_redirects');if(fs.existsSync(src)){fs.copyFileSync(src,dest);console.log('Copied _redirects file');}else{console.log('No _redirects file found, skipping...');}\"",
    "build:widget": "node build-script.js widget",
    "electron": "electron .",
    "electron:local": "cross-env ELECTRON_ENV=local electron .",
    "electron-build": "npm run build && electron-builder --win",
    "desktop-build": "npm run build && electron-builder --win --config.forceCodeSigning=false",
    "widget-electron": "cross-env ELECTRON_MAIN=public/electron-widget.js electron .",
    "clean-build": "node -e \"const fs=require('fs');const path=require('path');const dir='dist-widget';if(fs.existsSync(dir)){fs.rmSync(dir,{recursive:true,force:true});console.log('Cleaned dist-widget');}\"",
    "clear-electron-cache": "node scripts/clear-electron-cache.js",
    "widget-build": "npm run clear-electron-cache && npm run clean-build && npm run build:widget && cross-env ELECTRON_MAIN=public/electron-widget.js CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_IDENTITY_AUTO_DISCOVERY=false CSC_LINK= CSC_KEY_LINK= electron-builder --config electron-builder.json --win",
    "widget-build:clean": "node scripts/clean-electron.js && npm run widget-build",
    "widget-dev": "npm run build:widget && npm run widget-electron",
    "install-widget-deps": "npm install electron-auto-launch electron-store --save-optional"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.sarya.connective",
    "productName": "Sarya Connective",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/electron-widget.js",
      "public/preload-widget.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "publisherName": "Sarya Connective Team",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null,
    "afterSign": null,
    "forceCodeSigning": false
  }
}