{
  "name": "shirinq-connect-client",
  "version": "1.0.0",
  "description": "ShirinQ Connect Client - HR & Payroll Management System Frontend",
  "author": "ShirinQ Connect Team",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.4",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-to-print": "^2.14.15",
    "socket.io-client": "^4.7.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "widget": "start-widget-cmd.bat",
    "widget-ps": "powershell -ExecutionPolicy Bypass -File start-widget.ps1",
    "build": "node build-script.js web",
    "build:widget": "node build-script.js widget",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "widget-electron": "ELECTRON_MAIN=public/electron-widget.js electron .",
    "widget-dev": "concurrently \"npm run widget\" \"wait-on http://localhost:3001 && ELECTRON_MAIN=public/electron-widget.js electron .\"",
    "widget-build": "npm run build:widget && ELECTRON_MAIN=public/electron-widget.js electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.shirinq.connect",
    "productName": "ShirinQ Connect",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "publisherName": "ShirinQ Connect Team",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null,
    "afterSign": null,
    "forceCodeSigning": false
  }
}
