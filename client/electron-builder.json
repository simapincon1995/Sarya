{
  "appId": "com.sarya.connective.widget",
  "productName": "HRMS Widget",
  "directories": {
    "output": "dist-widget"
  },
  "files": [
    "build/**/*",
    "public/electron-widget.js",
    "public/preload-widget.js",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/assets/icon.ico",
    "publisherName": "Sarya Connective Team",
    "verifyUpdateCodeSignature": false,
    "sign": null,
    "signingHashAlgorithms": [],
    "signDlls": false,
    "certificateFile": null,
    "certificatePassword": null,
    "timeStampServer": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": null,
  "afterSign": null,
  "forceCodeSigning": false
}
